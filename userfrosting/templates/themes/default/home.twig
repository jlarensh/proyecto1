{% extends "layouts/layout-jumbotron.twig" %}
{% set page_group = "loggedout" %}

{% block page %}
    {# By putting this in a special block, we ensure that it will be set AFTER the default values are set in the parent template, 
    but BEFORE the page itself is rendered. #}
    
    {% set page = page | merge({
        "title"       : "Herramienta flexible para la creación simplificada de documentos complejos.",
        "description" : "Main landing page for public access to this website.",
        "active_page" : ""
    }) %}
    {{ parent() }}
{% endblock %}

{% block content %}    
    <h1>Bienvenido a {{site.site_title}}</h1>
    <p class="lead">Una herramienta flexible para la creación simplificada y eficiente de documentos complejos tales como contratos, actas, minutas, matrices, certificados, etc.</p>
    {% include 'components/common/alerts.twig' %}	
    <div class="row">
        <div class="col-sm-12">
          <a href="{{site.uri.public}}/account/login" class="btn btn-success" role="button" value="Login">Ingresar</a>
        </div>
    </div>
    	
{% endblock %}
